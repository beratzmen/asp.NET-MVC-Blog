@model IEnumerable<BlogUygulama.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="form-horizontal">

                <h2>Kategoriler</h2>
                <p>
                    @Html.ActionLink("Kategori Ekle", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.KategoriAdi)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.KategoriAdi)
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriId }) |
                                @Html.ActionLink("Detay", "Details", new { id = item.KategoriId }) |
                                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
