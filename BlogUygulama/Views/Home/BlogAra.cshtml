@model IEnumerable<BlogUygulama.Models.Makale>

@{
    ViewBag.Title = "BlogAra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}








<!-- Page Header -->
<header class="masthead" style="background-image: url('../../img/arama.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                 
                </div>
            </div>
        </div>
    </div>
</header>





<div class="container">

    <h2>
        Aranan İçerikteki Makaleler
    </h2>
    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uye.KullaniciAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tarih)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Okunma)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uye.KullaniciAdi)
                    </td>
                    <td>
                        <a href="/Home/MakaleDetay/@item.MakaleId">@Html.DisplayFor(modelItem => item.Baslik)</a>

                    </td>

                    <td>
                        <img src="@item.Foto" class="img-fluid rounded" alt="@item.Baslik" width="75" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Okunma)
                    </td>

                </tr>
            }
    </div>
    </table>





</div>
   

